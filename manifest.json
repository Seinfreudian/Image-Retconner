{
  "manifest_version": 3,
  "name": "Image-Retconner",
  "version": "1.0.0",
  "description": "Replace all images with Tekken/MK pics!",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "action": {
    "default_popup": "layout.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["miku_pics.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["miku_img/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
